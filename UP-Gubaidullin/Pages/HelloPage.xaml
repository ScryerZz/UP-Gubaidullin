<Page x:Class="UP_Gubaidullin.Pages.HelloPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP_Gubaidullin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HelloPage" FontFamily="Montserrat">

    <Grid Background="#FDF5DF">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" Width="300">
            <TextBlock Margin="5" HorizontalAlignment="Center" Foreground="#305478" FontSize="14" FontWeight="Medium">НЕОБХОДИМО ВВЕСТИ ПАРОЛЬ:</TextBlock>
            <TextBox Name="PassTB" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="220" BorderThickness="0,0,0,0.5" BorderBrush="#305478" Height="25" Foreground="#305478" FontSize="14" FontWeight="Medium"></TextBox>
            <Button HorizontalAlignment="Stretch" Margin="5" Click="OnEnter" Background="#305478" Foreground="#FDF5DF" BorderThickness="0,0,0,0" BorderBrush="{x:Null}" FontSize="14" Height="25" Width="220" FontWeight="Medium">ВОЙТИ</Button>
        </StackPanel>
    </Grid>
</Page>
